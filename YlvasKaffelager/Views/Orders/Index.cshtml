@model YlvasKaffelager.ViewModels.OrderViewModel

<div class="text-center">
    <h1 class="display-4">Beställ</h1>
     <h1 class="display-6">Vi ser fram emot din order.</h1>
</div>

<form asp-action="Orders" asp-controller="Orders" method="post">
    <div class="row">
        <div class="col-md-6">
            
            <label>Förnamn:</label>
            <input class="form-control" type="text" asp-for="FirstName" required />
                
            <label>Efternamn</label>
            <input class="form-control" type="text" asp-for="LastName" required />
            
            <label>E-post</label>
            <input class="form-control" type="email" asp-for="Email" required />

            <label>Produkt</label>
            <select class="form-control" asp-for="CoffeeId" asp-items="@(new SelectList(Model.CoffeeItems, "Value", "Text"))" required>
                <option value="">---Välj---</option>  
            </select>

            <label>Antal</label>
            <input class="form-control" type="number" asp-for="Amount" min="1"/>
        </div>

        <div class="row">
            <div class="col-md-6 mt-1">      
                <input type="submit" name="btn Submit" value="Beställ" class="btn btn-success" />  
            </div>
        </div>

    </div>  
  
</form>